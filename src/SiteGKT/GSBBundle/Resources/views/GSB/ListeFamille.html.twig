{% extends "SiteGKTGSBBundle::layout.html.twig" %}
	{% block title %}
		Accueil - {{ parent () }}
	{% endblock %}
	{% block TCHblog_body %}
		<h2>Liste des familles</h2>
		<ul>		
		{% if Familles | length > 0 %}
		<table border="2" width="100%">
		<tr><th>Libell√©</th><th>Actions</th></tr>
		{% for uneFamille in Familles %}
			
				<tr><td>{{uneFamille.getFAMLibelle()}}</td>
				<td>
					<a href ="{{path('SiteGKTGSB_ModifierFamille', {'id':uneFamille.id}) }}" class="btn">
					<i class ="icon-edit"></i>
					Modifier
					</a>
					<a href ="{{path('SiteGKTGSB_SupprimerFamille', {'id':uneFamille.id}) }}" class="btn">
					<i class ="icon-edit"></i>
					Supprimer
					</a>
				</td>
			
			{% endfor %}
		</table>
		{% endif %}
		</ul>
	{% endblock %}